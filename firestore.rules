rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(ownerId) {
      return isSignedIn() && request.auth.uid == ownerId;
    }

    match /users/{userId} {
      allow read, create: if isOwner(userId);
    }

    match /recipients/{recipientId} {
      // Get is secured by ownerId on the document itself
      allow get, delete: if isOwner(resource.data.ownerId);
      // List is only allowed for signed-in users. Client query must filter by ownerId.
      allow list: if isSignedIn();
      allow create: if isOwner(request.resource.data.ownerId);
      // Updates are disabled for simplicity. Users can re-import lists.
      allow update: if false;
    }

    match /delivery-logs/{logId} {
      // Get is secured by ownerId on the document itself
      allow get: if isOwner(resource.data.ownerId);
      // List is only allowed for signed-in users. Client query must filter by ownerId.
      allow list: if isSignedIn();
      allow create: if isOwner(request.resource.data.ownerId);
      allow update, delete: if false;
    }

    match /smtp-settings/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
