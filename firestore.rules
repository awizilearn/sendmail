rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(ownerId) {
      return isSignedIn() && request.auth.uid == ownerId;
    }

    match /users/{userId} {
      allow read, create: if isOwner(userId);
    }

    match /recipients/{recipientId} {
      allow read, delete: if isOwner(resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
      // Updates are disabled for simplicity. Users can re-import lists.
      allow update: if false;
    }

    match /delivery-logs/{logId} {
      // Explicitly grant 'list' for collection queries and 'get' for single doc reads.
      allow get, list: if isOwner(resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
      allow update, delete: if false;
    }

    match /smtp-settings/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
