rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(ownerId) {
      return isSignedIn() && request.auth.uid == ownerId;
    }

    match /users/{userId} {
      allow read, create: if isOwner(userId);
    }

    match /recipients/{recipientId} {
      // Users can only get/delete their own recipients.
      allow get, delete: if isOwner(resource.data.ownerId);

      // List queries MUST filter by ownerId on the client.
      allow list: if isSignedIn();

      // Users can only create recipients for themselves.
      allow create: if isOwner(request.resource.data.ownerId);

      // Updates are disabled for simplicity. Users should re-import lists.
      allow update: if false;
    }

    match /delivery-logs/{logId} {
      // Users can only get their own logs.
      allow get: if isOwner(resource.data.ownerId);

      // List queries MUST filter by ownerId on the client.
      allow list: if isSignedIn();

      // Users can only create logs for themselves.
      allow create: if isOwner(request.resource.data.ownerId);
      
      // Logs are immutable.
      allow update, delete: if false;
    }

    match /smtp-settings/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
